#!/bin/sh

GAWK=`which gawk 2>/dev/null` || GAWK=""
CMPLS=`which cpmls 2>/dev/null` || CMPLS=""
CMPCP=`which cpmcp 2>/dev/null` || CMPCP=""
CMPRM=`which cpmrm 2>/dev/null` || CMPRM=""
FMT="-f v06"

cpm_list() {
  if [ -z "$CMPLS" ]; then
      echo "Error: could not find cpmls" >&2
      exit 1
  fi
  OWNER=$(ls -l "$1" | $GAWK '{ printf "%-8s %-8s\n", $3, $4 }')
  $CMPLS $FMT -l "$1" | $GAWK -v owner="$OWNER" '
  {
    if (match($0, /^([1-9][0-5]?):/, arr)) {
      path = "user_"arr[1]"/"
    }
    if ($0 ~ /^[-][r-][w-][x-][r-][w-][x-][r-][w-][x-].*/) {
      perm = "-rw-rw-rw-"
      size = $2
      month = $3
      day = $4
      year = $5
      gsub(/\//, "∕", $6)
      file = path""toupper($6)
      printf "%s   1 %s %8d %s %s %s %s\n", perm, owner, size, month, day, year, file
    }
  }'
  exit 0
}

cpm_path_to_user_file() {
  echo "$1" | $GAWK '
  {
    user="0"
    if (match($0, /^user_([1-9][0-5]?)\/(.*)/, arr)) {
      user=arr[1]
      file=arr[2]
    } else {
      file=$0
    }
    gsub(/∕/, "/", file)
    print user":"file
  }'  
}

cpm_copyout() {
  SOURCE=$(cpm_path_to_user_file "$2")
  if [ -z "$CMPCP" ]; then
      echo "Error: could not find cpmcp" >&2
      exit 1
  fi
  $CMPCP $FMT -p "$1" "$SOURCE" "$3" &> /dev/null
  exit $?
}

cpm_copyin() {
  DEST=$(cpm_path_to_user_file "$2")
  if [ -z "$CMPCP" ]; then
      echo "Error: could not find cpmcp" >&2
      exit 1
  fi
  $CMPCP $FMT -p "$1" "$3" "$DEST" &> /dev/null
  exit $?
}

cpm_rm() {
  FILE=$(cpm_path_to_user_file "$2")
  if [ -z "$CMPRM" ]; then
      echo "Error: could not find cpmrm" >&2
      exit 1
  fi
  $CMPRM $FMT "$1" "$FILE" &> /dev/null
  exit $?
}

cpm_mkdir() {
  [[ "$2" =~ ^user_[1-9][0-5]?$ ]] && exit 0;  
  exit 1;
}

cpm_rmdir() {
  exit 0;
}

if [ -z "$GAWK" ]; then
    echo "Error: could not find gawk" >&2
    exit 1
fi

LC_ALL=C
export LC_ALL
umask 077

cmd="$1"
shift

case "$cmd" in
  list)    cpm_list    "$@" ;;
  copyout) cpm_copyout "$@" ;;
  copyin)  cpm_copyin  "$@" ;;
  mkdir)   cpm_mkdir   "$@" ;;
  rmdir)   cpm_rmdir   "$@" ;;
  rm)      cpm_rm      "$@" ;;
  *) exit 1 ;;
esac
exit 0
